<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Homepage Page -->
    <record id="theme_corporate_homepage_page" model="website.page">
        <field name="name">Inicio Corporativo</field>
        <field name="url">/</field>
        <field name="view_id" ref="corporate_homepage"/>
        <field name="is_published">True</field>
        <field name="key">theme_corporate_multi.corporate_homepage_page</field>
    </record>

    <!-- Services Page -->
    <record id="theme_corporate_services_page" model="website.page">
        <field name="name">Servicios</field>
        <field name="url">/servicios</field>
        <field name="view_id" ref="corporate_services"/>
        <field name="is_published">True</field>
        <field name="key">theme_corporate_multi.corporate_services_page</field>
    </record>

    <!-- Default Website Menu -->
    <record id="theme_corporate_menu_services" model="website.menu">
        <field name="name">Servicios</field>
        <field name="url">/servicios</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>
</odoo>
