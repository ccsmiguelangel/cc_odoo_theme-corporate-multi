<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Homepage Template -->
    <template id="corporate_homepage" name="Corporate Homepage" track="1">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_banner pt96 pb96" data-snippet="s_banner" data-name="Banner">
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-6 jumbotron rounded pt64 pb64 o_cc o_cc1" data-name="Jumbotron">
                                <h1>Bienvenidos a <span t-field="res_company.name"/></h1>
                                <p class="lead">Tu establecimiento de confianza en la zona.</p>
                                <div t-if="res_company.zone_id" class="mt16 mb16">
                                    <span class="badge rounded-pill bg-primary p-2">
                                        <i class="fa fa-map-marker me-1"/> <span t-field="res_company.zone_id.name"/>
                                    </span>
                                </div>
                                <a href="/shop" class="btn btn-primary btn-lg">Ver Tienda</a>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="s_text_image pt32 pb32" data-snippet="s_text_image" data-name="Text - Image">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 pt16 pb16">
                                <h2>Nuestros Servicios</h2>
                                <p>Ofrecemos la mejor calidad y atención personalizada para todos nuestros clientes.</p>
                                <a href="/servicios" class="btn btn-secondary">Leer más</a>
                            </div>
                            <div class="col-lg-6 pt16 pb16 text-center">
                                <img src="/web/static/img/website/s_text_image_default.jpg" class="img img-fluid mx-auto" alt="Servicios"/>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Services Page Template -->
    <template id="corporate_services" name="Corporate Services" track="1">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title pt32 pb32" data-snippet="s_title" data-name="Title">
                    <div class="container">
                        <h1 class="text-center">Nuestros Servicios</h1>
                    </div>
                </section>
                <section class="s_three_columns pt32 pb32" data-snippet="s_three_columns" data-name="Columns">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                <div class="card bg-white h-100 border">
                                    <div class="card-body">
                                        <h3 class="card-title">Calidad Garantizada</h3>
                                        <p class="card-text">Solo trabajamos con los mejores productos del mercado.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                <div class="card bg-white h-100 border">
                                    <div class="card-body">
                                        <h3 class="card-title">Atención Personalizada</h3>
                                        <p class="card-text">Cada cliente es único y merece un trato especial.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                <div class="card bg-white h-100 border">
                                    <div class="card-body">
                                        <h3 class="card-title">Ubicación Estratégica</h3>
                                        <p class="card-text" t-if="res_company.zone_id">
                                            Visítanos en <span t-field="res_company.zone_id.name"/>.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
